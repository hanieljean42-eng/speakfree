# ====================================
# CONFIGURATION SPEAKFREE - PRODUCTION
# ====================================
# Copiez ce fichier vers .env et remplissez les valeurs

# Environnement
NODE_ENV=production
PORT=3000

# Base de données MySQL (ex: PlanetScale, Railway, Aiven)
MYSQL_HOST=your-mysql-host.com
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=speakfree
MYSQL_SSL=true

# Sécurité
JWT_SECRET=votre_secret_jwt_tres_long_et_securise_minimum_32_caracteres

# API Anthropic (pour le chat IA)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Frontend URL (pour CORS)
FRONTEND_URL=https://votre-app.netlify.app
